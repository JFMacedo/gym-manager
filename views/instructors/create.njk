{% extends "layout.njk" %}

{% block head %}
  <title>Gym Manager - Novo Instrutor</title>
{% endblock %}

{% block content %}
  <div id="content">
    <form class="card" method="POST" action="/instructors">
      <section class="avatar" style="background: url(https://source.unsplash.com/collection/3652543/900x900) no-repeat center center / cover;">
      </section><!--avatar-->
      <section class="details">
        <h3>Novo Instrutor</h3>
        <div class="item">
          <div>Avatar URL</div>
          <input type="text" name="avatar_url" placeholder="http://">
        </div><!--item-->
        <div class="item">
          <div>Instrutor</div>
          <input type="text" name="name" placeholder="Nome do instrutor">
        </div><!--item-->
        <div class="item">
          <div>Data de nascimento</div>
          <input type="date" name="birth">
        </div><!--item-->
        <div class="item">
          <div>Sexo</div>
          <input type="radio" name="gender" id="m" value="M">
          <label for="m">Masculino</label>
          <input type="radio" name="gender" id="f" value="F">
          <label for="f">Feminino</label>
        </div><!--item-->
        <div class="item">
          <div>Area de atuação</div>
          <div>
            <input type="text" name="services" placeholder="Separe os serviços prestados por virgula">
          </div>
          <input type="submit" value="Salvar">
      </section><!--details-->
    </form><!--card-->
  </div><!--page-instructors-->
{% endblock %}